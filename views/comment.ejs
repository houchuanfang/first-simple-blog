<div style="margin: 0px 20px 20px;">
  <div style="border-bottom:  1px solid  #ccc;padding: 10px 0px;margin: 0px 10px 10px;">
    <% post.comments.forEach(function (comment, index) { %>
    <div style="padding: 10px 0px;">
      <div style="height: 50px;line-height: 50px;">
        <img src="<%= comment.head %>" class="l_head" style="width: 24px;height: 24px;margin-top: 10px;"/>
        <a href="<%= comment.website %>"><%= comment.user_name %></a>
        <span class="info"> 回复于 <%= moment(new Date(parseInt(comment.create_time))).format('YYYY-MM-DD HH:MM:SS') %> </span>
      </div>
      <div><%- comment.content %></div>
    </div>
    <% }) %>
  </div>

  <div style="margin: 0px 20px 10px;">
    <% if (user) { %>
    <form method="post" action="/user/<%= post.user_name %>/<%= post.create_time %>/<%= post.title %>">
      <div style="display: none;">
        姓名：<input type="text" name="name" value="<%= user.user_name %>" /><br />
        邮箱：<input type="text" name="email" value="<%= user.email %>" /><br />
        网址：<input type="text" name="website" value="/user/<%= user.user_name %>" /><br />
      </div>
        <textarea name="content" rows="20" style="width:90%;"></textarea><br />
        <input type="submit" value="留言" />
      </form>
      <% } else {%>
        <a href="/login/">注册用户登录后才能发表评论</a>
      <% } %>
  </div>
</div>
