<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <%- include header %>
      <!-- 这是主页 -->
      <% posts.forEach(function (post, index) { %>
        <p><h2><a href="/user/<%= post.user_name %>/<%= post.create_time%>/<%= post.title%>"><%= post.title %></a></h2></p>
        <p class="info">
          作者：<a href="/user/<%= post.user_name %>"><%= post.user_name %></a> | 
          日期：<%= moment(new Date(parseInt(post.create_time))).format('YYYY-MM-DD HH:MM:SS') %> | 
          标签：
          <% if (post.tag) { %>
              <a class="tag" href="/tags/<%= post.tag %>"><%= post.tag %></a>
          <% } %>
        </p>
        <p><%- post.post %></p>
        <p class="info">阅读：<%= post.pv %> | 评论：<%= post.comments.length %></p>
      <% }) %>
      <%- include pagination %>
    <%- include footer %>
  </body>
</html>
